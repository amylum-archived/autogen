  },
  gc: {
    version: '7.6.8-1',
    checksum: '2387deb91a737f991c0c2f8bbac8e00e2cd79f22c666c2449e3ab27a2219a105'
  },
  libatomic_ops: {
    version: '7.6.6-1',
    checksum: '54738c5775e699b364596d9a72a76693e4b58b277fe412e3c7b9afd2d1caa3d8'
  },
  guile: {
    version: '2.2.4-2',
