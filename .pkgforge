  },
  gc: {
    version: '7.6.4-1',
    checksum: 'f48d9276dafc6b661a4520072017ba036c74d5c69b16da9ac7a1b13e7a7bad07'
  },
  libatomic_ops: {
    version: '7.6.2-1',
    checksum: '28a35ae9281d48c9b678971ecf205c13a2176f64d27a3d566589e71c39e28b7c'
  },
  guile: {
    version: '2.2.3-5',
