name 'autogen'
org 'amylum'

license 'COPYING'

autogen_version = '5.18.12'

source(
  type: 'tar',
  url: "http://ftp.gnu.org/gnu/autogen/rel#{autogen_version}/autogen-#{autogen_version}.tar.xz"
)

deps(
  gmp: '6.1.2-1',
  gc: '7.6.0-12',
  libatomic_ops: '7.4.4-4',
  guile: '2.0.11-3',
  libffi: '3.2.1-4',
  libunistring: '0.9.7-1',
  libtool: '2.4.6-2'
)
remove_linker_archives

configure_flags(
  prefix: '/usr',
  host: 'x86_64-unknown-linux-gnu',
  'without-libregex': nil
)

cflags
harden
libs %w(ffi unistring gmp gc guile-2.0 ltdl)

build do
  run 'autoreconf -i'
  configure
  make
  install
end

test do
  # TODO: add tests
end
