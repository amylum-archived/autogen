name 'autogen'
org 'amylum'

license 'COPYING'

autogen_version = '5.18.12'

source(
  type: 'tar',
  url: "https://ftp.gnu.org/gnu/autogen/rel#{autogen_version}/autogen-#{autogen_version}.tar.xz",
  checksum: 'be3ba62e883185b6ee8475edae97d7197d701d6b9ad9c3d2df53697110c1bfd8'
)

patch 'guile-2.2.patch'

deps(
  gmp: {
    version: '6.1.2-1',
    checksum: '12515de758fa11b2b3d87b347d0593fc8bde37b32a6c609cbddd09473e180b08'
  },
  gc: {
    version: '7.6.4-3',
    checksum: 'f3e627c15e7133b79ff6abe2f3d262d35f013a8368680129b82e903776f6ac67'
  },
  libatomic_ops: {
    version: '7.6.4-1',
    checksum: 'c151dbcec5b1f323c901f26ff9646558b30253c47a46f649e66cd3c403cd2f09'
  },
  guile: {
    version: '2.2.3-8',
    checksum: 'd074e80a1b758b6c792af7a8f404e3b681f22e7058b000300b84a6348d38a0fc'
  },
  libffi: {
    version: '3.2.1-4',
    checksum: '7d8e4e3d098e095ee0e37d00c5b6ac5ab4623a80e45eb3a625f1d97c5781e03e'
  },
  libunistring: {
    version: '0.9.9-1',
    checksum: 'd31eb1193caf41d9bd9f27e92ef1ecdddcac0fb6de51ae2eb00b0c1c806cb6f1'
  },
  libtool: {
    version: '2.4.6-2',
    checksum: '5a3a7cd180e16e399501a10cc13da752e4d4e3f86b73ae9afa5ffa9f63b86d3a'
  }
)
remove_linker_archives

configure_flags(
  prefix: '/usr',
  host: 'x86_64-unknown-linux-gnu',
  'without-libregex': nil
)

cflags
harden
libs %w(ffi unistring gmp gc guile-2.2 ltdl)

build do
  run 'autoreconf -i'
  configure 'GUILE_LIBS' => '-lguile-2.2 -lgc'
  make
  install
end

