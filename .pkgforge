name 'autogen'
org 'amylum'

license 'COPYING'

autogen_version = '5.18.12'

source(
  type: 'tar',
  url: "https://ftp.gnu.org/gnu/autogen/rel#{autogen_version}/autogen-#{autogen_version}.tar.xz",
  checksum: 'be3ba62e883185b6ee8475edae97d7197d701d6b9ad9c3d2df53697110c1bfd8'
)

patch 'guile-2.2.patch'

deps(
  gmp: {
    version: '6.1.2-1',
    checksum: '12515de758fa11b2b3d87b347d0593fc8bde37b32a6c609cbddd09473e180b08'
  },
  gc: {
    version: '7.6.0-21',
    checksum: '4260abe686a0d31277c3bc50a6000c43a6bf312008a03700b41330fa17f84e0d'
  },
  libatomic_ops: {
    version: '7.4.6-1',
    checksum: '81689a977bd7950537ff59c50c673e3f5b96d8ced8a3507b56c118a589f724dd'
  },
  guile: {
    version: '2.2.2-6',
    checksum: '787a46bf54e5840a3cd4be297b82a2fcfa507f8d46fdfdc01899404673072658'
  },
  libffi: {
    version: '3.2.1-4',
    checksum: '7d8e4e3d098e095ee0e37d00c5b6ac5ab4623a80e45eb3a625f1d97c5781e03e'
  },
  libunistring: {
    version: '0.9.7-1',
    checksum: 'e3a70df2de3dfbcaae3c1dc01b1ede76bff031e9628e7fbbb4856f39dd0b3447'
  },
  libtool: {
    version: '2.4.6-2',
    checksum: '5a3a7cd180e16e399501a10cc13da752e4d4e3f86b73ae9afa5ffa9f63b86d3a'
  }
)
remove_linker_archives

configure_flags(
  prefix: '/usr',
  host: 'x86_64-unknown-linux-gnu',
  'without-libregex': nil
)

cflags
harden
libs %w(ffi unistring gmp gc guile-2.2 ltdl)

build do
  run 'autoreconf -i'
  configure 'GUILE_LIBS' => '-lguile-2.2 -lgc'
  make
  install
end

