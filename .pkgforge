name 'autogen'
org 'amylum'

license 'COPYING'

autogen_version = '5.18.12'

source(
  type: 'tar',
  url: "https://ftp.gnu.org/gnu/autogen/rel#{autogen_version}/autogen-#{autogen_version}.tar.xz",
  checksum: 'be3ba62e883185b6ee8475edae97d7197d701d6b9ad9c3d2df53697110c1bfd8'
)

patch 'guile-2.2.patch'

deps(
  gmp: {
    version: '6.1.2-1',
    checksum: '12515de758fa11b2b3d87b347d0593fc8bde37b32a6c609cbddd09473e180b08'
  },
  gc: {
    version: '7.6.0-22',
    checksum: '9ad3c4754762baea414ed68c8fa14bf7171f860a5c72a2e9cc6a887983f7ffc9'
  },
  libatomic_ops: {
    version: '7.4.8-1',
    checksum: '991dafdaf4288cd14ccb5e7dc6be689849323fcd92048040dec5d65813776309'
  },
  guile: {
    version: '2.2.2-8',
    checksum: '7bd56be22ad957adcba2b231ad148c70a2c63b90cc425c356f1f0537c02cb94c'
  },
  libffi: {
    version: '3.2.1-4',
    checksum: '7d8e4e3d098e095ee0e37d00c5b6ac5ab4623a80e45eb3a625f1d97c5781e03e'
  },
  libunistring: {
    version: '0.9.8-1',
    checksum: '7e21962ecf63c4f12a227c92a5ae6541078c33732581d68179dc343893bf3d86'
  },
  libtool: {
    version: '2.4.6-2',
    checksum: '5a3a7cd180e16e399501a10cc13da752e4d4e3f86b73ae9afa5ffa9f63b86d3a'
  }
)
remove_linker_archives

configure_flags(
  prefix: '/usr',
  host: 'x86_64-unknown-linux-gnu',
  'without-libregex': nil
)

cflags
harden
libs %w(ffi unistring gmp gc guile-2.2 ltdl)

build do
  run 'autoreconf -i'
  configure 'GUILE_LIBS' => '-lguile-2.2 -lgc'
  make
  install
end

